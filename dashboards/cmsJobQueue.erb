      <div data-id="publish-job-count" data-view="Number" data-title="Jobs Published Today" data-current="0" data-min="0"></div>
    </li>

    <li data-row="4" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="average-publish-time" data-view="Number" data-title="Average Processing Time" data-current="0" data-measure="secs"
           data-min="0"></div>
    </li>

    <li data-row="4" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="hpd-dependencies-count" data-view="Number" data-title="#HPD Dependencies" data-current="12000000" data-min="0"></div>
    </li>

    <li data-row="4" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="hpd-invalidatation-queue" data-view="Number" data-title="HPD Invalidation Queue" data-min="0"></div>
    </li>
